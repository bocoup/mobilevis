header {
  background: #9654A1;
  color: $link_color;
  padding: 20px;
  width: 100%;
  overflow: auto;
  margin-bottom: .5em;

  a.logo {
    margin-top : 0px;
    float: left;
    position: relative;

    img {
      max-width: 100%;
    }
  }

  ul.menu {
    list-style-type: none;
    padding: 0;
    margin: 0;
    float: right;
    line-height: 4.5em;

    li {
      float: left;
      margin-left: 1em;

      a {
        position: relative;
        text-decoration: none;
        color: $link_color;
        background: #80508C;
        padding: 0.7em;
        border-radius: 5px;

        &:hover {
          background: #6B4375;
        }

        img {
          margin: 0 2px 2px 0;
        }
      }

      .twitter-login {
        background: #4EADF0;

        &:hover {
          background: #469BD6;
        }

        img {
          margin: 0 6px 5px 0;
        }
      }
    }
  }
}

/* Dropdown menu */

nav label {
  display: none;
  cursor: pointer;
  -webkit-user-select: none;
}

nav input[type=checkbox] {
  position: absolute;
  top: -9999px;
  left: -9999px;
}

nav.f-nav {
  background-color: rgba(0,0,0,1);
}
