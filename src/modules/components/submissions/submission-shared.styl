div.submitted_by a, div.creator a {
  cursor: pointer;
}

.tags-title, .extra {
  margin-top: 2em;  
}


div.tags {
  font-size: 0.8em;
  margin-top: 1em;
}

span.tag {
  padding: .3em .6em;
  margin-bottom: .5em;
  background: #B4B4B4;
  color: white;
  border-radius: 3px;
  cursor: pointer;
  display: inline-block;

  &:hover {
    background: #949494;
  }
}

.comments {

  legend {
    font-size: 24px;
    border: none;
    margin-bottom: .3em;
    color: #6d6c6c;
  }

  .btn.btn-primary {
    background: #f1347d;  
    padding: 0.3em 0.8em;
    border: none;
  }

  textarea {
    border-color: #ccc;
  }

}
